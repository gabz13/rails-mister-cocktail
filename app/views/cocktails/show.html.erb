

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <p>Ingredients:</p>
      <% @cocktail.doses.each do |dose| %>
      <ul><p> <%= dose.ingredient.name %> Description: <%= dose.description %>  | <%= link_to "Delete dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %> </p>
      </ul>
      <% end %>

<p></p>

<div class="container">
<p class="btn btn-outline-dark"><%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %></p>

<p class="btn btn-outline-dark"><%= link_to "See all cocktails", cocktails_path %></p>
</div>

