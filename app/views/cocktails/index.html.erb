
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=700&q=60);">
  <div class="container d-flex align-items-center flex-column">
    <h1><strong>Cocktails!</strong></h1>

    <a><%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-outline-light center" %></a>

  </div>
</div>





<div>

    <div class="d-flex justify-content-between">
      <% @cocktails.each do |cocktail| %>

      <div class="card-drink">
        <img src="https://images.pexels.com/photos/1232152/pexels-photo-1232152.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500">
          <div class="card-drink-infos">
            <div>
              <p><%= link_to cocktail.name, cocktail_path(cocktail), class: "btn-outline-dark center" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>



